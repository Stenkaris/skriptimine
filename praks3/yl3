#!/bin/bash
# Skripti eesmärk: Arvutada ühe nädala eeldatav ajakulu ainepunktide alusel ja ümardada see ülespoole täisarvuni

# Küsime kasutajalt ainepunktide arvu
echo -n "Sisesta ainepunktide arv: "
read ainepunktid

# Küsime kasutajalt nädalate arvu
echo -n "Sisesta nädalate arv: "
read nadalat

# Arvutame koguaeg = ainepunktid * 26 (tundi)
koguaeg=$(echo "$ainepunktid * 26" | bc)

# Arvutame nädala ajakulu = koguaeg / nädalate arv ja ümardame ülespoole
ajakulu=$(echo "($koguaeg / $nadalat) + 0.9" | bc)

# Väljastame tulemuse
echo "Ühe nädala eeldatav ajakulu on $ajakulu tundi."
